{
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-python.black-formatter"
	],
      "settings": {
        "editor.formatOnSave": true,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.languageServer": "Pylance"
      }
    }
  }
}
